# ===== App =====
NODE_ENV=development
PORT=3000
# Allow your Live Server (5500) and API (3000)
CORS_ORIGIN=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000

# ===== Auth toggle (demo) =====
# 1 = disable auth middleware (no JWT required); 0 = require JWT
NO_AUTH=1

# ===== JWT (used when NO_AUTH=0) =====
JWT_SECRET=dev-super-secret-change-me
JWT_EXPIRES_IN=8h

# ===== Database =====
# windows | sql
DB_AUTH=windows

# Your instance (adjust if you actually use a named instance, e.g. TITAN-4\SQLEXPRESS)
DB_SERVER=TITAN-4
DB_DATABASE=DispositivosMedicosDB

# Windows Auth (ODBC / msnodesqlv8)
DB_TRUST_CERT=true
# Installed ODBC driver on your machine (17 or 18)
DB_ODBC_DRIVER=ODBC Driver 17 for SQL Server

# SQL Login (only if DB_AUTH=sql)
DB_USER=sa
DB_PASSWORD=
# Local dev: usually false if you also set trust cert true
DB_ENCRYPT=false
